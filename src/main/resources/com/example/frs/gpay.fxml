   <children>
      <ImageView fitHeight="594.0" fitWidth="981.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/bg/mountains.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="97.0" fitWidth="169.0" layoutX="52.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/icon/google-pay.png" />
         </image>
      </ImageView>
      <TextField fx:id="upiId" layoutX="59.0" layoutY="139.0" prefHeight="32.0" prefWidth="360.0" />
      <Label layoutX="59.0" layoutY="90.0" text="Enter UPI ID">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label layoutX="685.0" layoutY="97.0" text="Scan QR Code">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <ImageView fitHeight="192.0" fitWidth="246.0" layoutX="685.0" layoutY="145.0" pickOnBounds="true" preserveRatio="true">
