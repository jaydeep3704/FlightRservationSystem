<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frs.LoginController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="450.0" style="-fx-background-color: #2f2b3a;">
         <children>
            <ImageView fitHeight="54.0" fitWidth="315.0" layoutX="68.0" layoutY="273.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="450.0" prefHeight="600.0" prefWidth="550.0" style="-fx-background-color: #46424f;">
         <children>
            <TextField fx:id="usernametf" layoutX="137.0" layoutY="279.0" prefHeight="25.0" prefWidth="275.0" promptText="User Name" style="-fx-background-color: transparent; -fx-border-color: #5e43f3; -fx-border-width: 0px 0px 2px 0px;">
               <font>
                  <Font size="14.0" />
               </font></TextField>
            <PasswordField fx:id="passwordpf" layoutX="137.0" layoutY="357.0" prefHeight="25.0" prefWidth="275.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #5e43f3; -fx-border-width: 0px 0px 2px 0px;">
