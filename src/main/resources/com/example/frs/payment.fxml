            <Image url="@images/icon/payments.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="63.0" fitWidth="119.0" layoutX="206.0" layoutY="131.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/icon/credit-card.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="63.0" fitWidth="119.0" layoutX="206.0" layoutY="197.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/icon/mastercard.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="63.0" fitWidth="119.0" layoutX="206.0" layoutY="274.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/icon/google-pay.png" />
         </image>
      </ImageView>
      <RadioButton fx:id="UPI" layoutX="308.0" layoutY="288.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="185.0" text="UPI" toggleGroup="$payment">
         <font>
            <Font size="25.0" />
         </font>
      </RadioButton>
      <ImageView fitHeight="98.0" fitWidth="156.0" layoutX="189.0" layoutY="320.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/icon/paypal.png" />
         </image>
      </ImageView>
      <RadioButton fx:id="PayPal" layoutX="308.0" layoutY="351.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="185.0" text="PayPal" toggleGroup="$payment">
         <font>
            <Font size="25.0" />
         </font>
      </RadioButton>
      <Button fx:id="Proceed" layoutX="381.0" layoutY="485.0" mnemonicParsing="false" onAction="#proceed_btn" prefHeight="42.0" prefWidth="142.0" style="-fx-background-color: #03A9F4;" text="Proceed" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
