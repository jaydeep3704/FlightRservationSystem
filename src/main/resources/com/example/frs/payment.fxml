      </ImageView>
      <Label layoutX="83.0" layoutY="174.0" />
      <Button fx:id="back" layoutX="206.0" layoutY="485.0" mnemonicParsing="false" onAction="#setBack_btn" prefHeight="42.0" prefWidth="142.0" style="-fx-background-color: #03A9F4;" text="Back" textFill="WHITE">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <RadioButton fx:id="creditCard" layoutX="308.0" layoutY="145.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="185.0" text="Credit Card">
         <font>
            <Font size="25.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="payment" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="debitCard" layoutX="308.0" layoutY="210.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="185.0" text="Debit Card" toggleGroup="$payment">
