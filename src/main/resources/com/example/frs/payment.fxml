<AnchorPane prefHeight="650.0" prefWidth="962.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frs.PaymentController">
   <children>
      <ImageView fx:id="back_btn" fitHeight="650.0" fitWidth="982.0" pickOnBounds="true" preserveRatio="true">
